print list(~s |> kmers_with_pos(1, 2))  # EXPECT: [(0, k'GA'), (1, k'AC'), (2, k'CT'), (3, k'TG'), (4, k'GG'), (5, k'GC'), (6, k'CC'), (9, k'TT')]

