from LD cimport PyObject_SetAttrString(cobj, cobj, cobj) -> cobj
from LD cimport PyObject_Length(cobj) -> int
from LD cimport Py_Initialize()
from LD cimport PyImport_ImportModule(cobj) -> cobj
