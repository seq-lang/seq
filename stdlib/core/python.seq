from LD cimport PyObject_GetAttrString(cobj, cobj) -> cobj
from LD cimport PyObject_Str(cobj) -> cobj
from LD cimport PyRun_SimpleString(cobj)
from LD cimport Py_IncRef(cobj)
from LD cimport Py_DecRef(cobj)
